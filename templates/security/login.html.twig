{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">

        <h1 class="my-4 text-center ">Please sign in</h1>
        <p class="mb-3 text-center text-muted ">Time to add some pins!</p>
        <form method="post">
        {% if error %}
            <div class="alert alert-error rounded my-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control"   autocomplete="current-password" required>
            </div>

            <div class="d-flex justify-content-between">
                <div class="form-group mb-3">
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me"  id="_remember_me">
                    <label class="form-check-label" for="_remember_me">
                    Remember me
                    </label>
                    </div>
                </div>             
                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Forgot password?</a>
            </div>
            
            <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
            >

            <div class="d-grid mx-auto my-3">
            <button class="btn btn-primary btn-lg w-100" type="submit">
                Sign in
            </button>
            </div>

            <p class="my-4 text-center text-muted">Not yet registered?<a href="#" class="text-decoration-none"> Create an account</a></p>
        </form>
    </div>
</div>

{% endblock %}
