{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">

            <h1 class="my-4 text-center">Create an account</h1>

            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">{{ form_row(registrationForm.firstName) }}</div>
                    <div class="col-md-6">{{ form_row(registrationForm.lastName) }}</div>
                </div>             
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword)}}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-lg w-100" formnovalidate>Register</button>

                <p class="my-4 text-center text-muted">Already an account?<a href="{{path('app_login')}}"> Log in</a></p>
            {{ form_end(registrationForm) }}

        </div>
    </div>
    
{% endblock %}
